{% extends 'base.jinja2' %}
{% import 'macros/form_macros.jinja2' as mform %}
{% import 'macros/util_macros.jinja2' as mutils %}

{% block body %}

<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-xl-6 text-center pt-3">
    <h1>Korpus {{ sentence.corpus }} annotieren</h1>
    <h2>Paket {{ batch.id }}</h2>
  </div>
</div>

<div class="row justify-content-center">
   <div class="col-12">
      <p>Zum <a href="{{ url('corpus-instructions', args=[sentence.corpus.id]) }}">Korpusleitfaden</a></p>
   </div>
</div>

<div class="row justify-content-center">
   <div class="col-10 col-xl-6">
      <div class="card">
      <div class="card-header">
          Satz {{ batch.number_of_labeled_sentences+1 }} von {{ batch.number_of_sentences }}
      </div>
      <div class="card-body">
          <p class="card-text">"{{ sentence.text }}"</p>
       </div>
       <div class="card-footer">
       {% if entities %}
       <p>Entitäten:</p>
       <ul>
          {% for entity in entities %}
          <li>{{ entity }}</li>
          {% endfor %}
       </ul>
       {% endif %}
       </div>
      </div>
   </div>
</div>

<div class="row justify-content-center">
    <div class="col-10 col-xl-6 pt-3">
       {% if entities %}
       <p>Entitäten:</p>
       <ul>
          {% for entity in entities %}
          <li>{{ entity }}</li>
          {% endfor %}
       </ul>
       {% endif %}
    </div>
</div>


<div class="row mt-2">
   <div class="col-10">
      {{ mutils.get_label_add_form(formset, csrf_input) }}
   </div>
</div>
{% endblock %}
