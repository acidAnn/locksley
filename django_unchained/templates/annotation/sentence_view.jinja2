{% extends 'base.jinja2' %}
{% import 'form_macros.jinja2' as mform %}

{% block body %}
<h1>Satzansicht</h1>
<p>{{ sentence.text }}</p>

{% if entities %}
<ul>
{% for entity in entities %}
<li>{{ entity }}</li>
{% endfor %}
</ul>
{% endif %}

<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        {{ formset.management_form }}
        {% for form in formset %}
        <div class="row">
            {{ form }}
        </div>
        {% endfor %}

    <button type="submit" class="btn btn-primary">Speichern</button>
</form>

{% endblock %}
