<!DOCTYPE html>
<html lang="en" dir="ltr">
{# ===== Head ===== #}
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Locksley</title>
    <link rel="icon" type="image/png" href="{{ static('images/favicon-32x32.png') }}">
    <meta name="author" content="Anna Sauer"/>
    {% block js_extra %}{% endblock %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ static('libs/bootstrap-4.5.0-dist/css/bootstrap.css') }}">
    {% block css_extra %}{% endblock %}
    <script src="{{ static('libs/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ static('js/main.js') }}"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
</head>

{# ===== Body ===== #}
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ url('workbench') }}">
        <img src="{{ static('images/favicon-32x32.png') }}" width="32" height="32" class="d-inline-block align-top" alt="">
        Locksley
    </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
      <a class="nav-link" href="{{ url('workbench') }}">Werkbank</a>
      </li>
      <li class="nav-item">
      <a class="nav-link" href="{{ url('instructions') }}">Leitfaden</a>
      </li>
    </ul>
    <span class="navbar-text">
        {% if request.user.is_authenticated %}
        Hallo, {{ request.user.username }}!
        <a href="{{ url('logout') }}?next=/">Logout</a>
        {% else %}
        <a href="{{ url('login') }}">Login</a>
        {% endif %}
    </span>
  </div>
</nav>


<div class="container-fluid">
    {% block body %}
    {% endblock %}
</div>

<script src="{{ static('libs/bootstrap-4.5.0-dist/js/bootstrap.min.js') }}"></script>
{% block js_tail %}
{% endblock %}
</body>
</html>