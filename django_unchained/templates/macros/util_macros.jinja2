{% macro get_label_add_form(formset, csrf_input) -%}
<div class="col-12">
    <form id="label-form" method="POST">
        {{ formset.management_form }}
        {{ csrf_input }}

        {% for form in formset %}
        <div class="labeling form-row justify-content-center m-3">
            {% for field in form %}
            <p class="m-2">{{ field.label }}:</p>
            {{ field }}
            {% endfor %}
            <input type="hidden" name="form-0-id" id="id_form-0-id" class=""/>
            <button title="Weiteres Label hinzufÃ¼gen"
                    class="col-2 col-sm-1 btn btn-success btn-block rounded-0 add-form-row m-2">
